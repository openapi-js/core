{
  "name": "@openapijs/core",
  "version": "1.0.1",
  "description": "core express typescript openapi.js library ",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier --write \"lib/src/**/*.ts\" \"lib/src/**/*.js\"",
